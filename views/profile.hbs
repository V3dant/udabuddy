    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="css/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="css/profile.css">
</head>

<body class="light-blue lighten-5">

    <header>
        <nav class="light-blue lighten-1 navStyle" role="navigation">
            <div class="nav-wrapper container">
                <a id="logo-container" href="#" class="brand-logo">UdaBuddy</a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="#">Sign Up | Login</a>
                    </li>
                </ul>
                <ul id="nav-mobile" class="sidenav">
                    <li>
                        <a href="#">Sign Up | Login</a>
                    </li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger">
                    <i class="material-icons">menu</i>
                </a>
            </div>
        </nav>
    </header>

    <main class="grey lighten-5">
        <div class="profile">
            <h3 class="profile-heading center-align">PROFILE</h3>

            <div class="profile-content-wrapper">
                <ul class="tabs">
                    <li class="tab">
                        <a class="active" href="#basic-form">Basic</a>
                    </li>
                    <li class="tab">
                        <a href="#work">Work &amp; Education</a>
                    </li>
                    <li class="tab">
                        <a href="#account">Account</a>
                    </li>
                </ul>

                <form action="#" id="basic-form">
                    <img src="media/dummy-profile-pic.png" class="circle profile-photo" alt="">

                    <div class="file-field input-field">
                        <div class="btn">
                            <span>File</span>
                            <input type="file" accept="image/*">
                        </div>

                        <div class="file-path-wrapper">
                            <input class="file-path" type="text" placeholder="Upload Profile Photo">
                        </div>
                    </div>

                    <div class="input-field">
                        <input id="name" type="text" class="validate">
                        <label for="name">Name</label>
                    </div>

                    <div class="input-field">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>

                    <div class="role-container">
                        <p class="grey-text">Role</p>

                        <label class="role-option">
                            <input class="with-gap" name="role" type="radio" checked>
                            <span>Alumni</span>
                        </label>

                        <label class="role-option">
                            <input class="with-gap" name="role" type="radio">
                            <span>Student</span>
                        </label>
                    </div>

                    <div class="input-field">
                        <input id="organisation" type="text" class="validate">
                        <label for="organisation">Organisation</label>
                    </div>

                    <div class="input-field">
                        <input id="location" type="text" class="validate">
                        <label for="location">Location</label>
                    </div>

                    <div class="input-field">
                        <textarea id="about" class="materialize-textarea validate" rows="3"></textarea>
                        <label for="about">About Yourself</label>
                    </div>

                    <div class="center-align">
                        <button type="button" class="btn btn-large waves-effect">Save Information</button>
                    </div>
                </form>

                <div id="work">
                    <h5 class="center-align">Work And Education Info Here</h5>
                </div>

                <div id="account">
                    <h5 class="center-align">Account Info Here</h5>
                </div>
            </div>
        </div>
    </main>

    <footer class="page-footer blue lighten-2 center">
        <div class="container">
            <div class="row nav2">
                <div class="col m3 s12">
                    <a href="#">
                        <b>About</b>
                    </a>
                </div>
                <div class="col m3 s12">
                    <a href="#">
                        <b>Blog</b>
                    </a>
                </div>
                <div class="col m3 s12">
                    <a href="#">
                        <b>Terms</b>
                    </a>
                </div>
                <div class="col m3 s12">
                    <a href="#">
                        <b>Developers</b>
                    </a>
                </div>
            </div>
        </div>
        <div class="footer-copyright blue lighten-1">
            <div class="container center">
                Created By
                <a class="black-text text-lighten-3" href="#">
                    <b>UdaBuddy Team</b>
                </a>
                <span id="copy">&copy;2018</span>
            </div>
        </div>
    </footer>

    <!--  Scripts-->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="js/materialize.min.js"></script>
    <script src="js/indexPage.js"></script>
    <script src="js/profile.js"></script>

</body>

</html>